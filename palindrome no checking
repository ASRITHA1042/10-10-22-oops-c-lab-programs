#include<iostream>
using namespace std;
int main()
{
	int n, t, rem, d = 0;
	cout << "no =  ";
	cin >> n;
	t = n;
	while (t > 0)
	{
    	rem = t % 10;
    	d = d * 10 + rem;
    	t = t / 10;
	}
	cout << "\nreverse = " << d << "\n\n";
	
	if(n == d) {
		cout << n << "palindrome no";
	}	
	else {
		cout << n << " not palindrome no";
	}
 	return 0;
}
