#include<iostream>
using namespace std;
int main()
{
	int number, i = 1, sum = 0;
	cout << "number =  ";
	cin >> number;
	while( i < number )
	{
		if(number % i == 0)
		{
			sum = sum + i;
		}
		i++;
	}	
	if(number == sum)
	{
		cout << number << " = perfect no";
	}
	else
	{
		cout << number << " = not perfect no";
	}
 	return 0;
}
